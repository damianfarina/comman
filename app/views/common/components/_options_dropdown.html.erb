<%# locals: (items:)  %>

<div class="mt-4 flex flex-shrink-0 md:ml-4 md:mt-0" data-controller="common--options-dropdown">
  <div class="relative inline-block text-left">
    <div>
      <button
        type="button"
        class="flex items-center rounded-full hover:bg-lightGray-100 text-gray-300 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-500"
        id="options-dropdown-button"
        aria-expanded="true"
        aria-haspopup="true"
        data-action="click->common--options-dropdown#toggle"
        data-common--options-dropdown-target="button"
      >
        <span class="sr-only">Open options</span>
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
          <path d="M10 3a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM10 8.5a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM11.5 15.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0Z" />
        </svg>
      </button>
    </div>
    <div
      class="transform opacity-0 scale-95 absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
      role="menu"
      aria-orientation="vertical"
      aria-labelledby="options-dropdown-button"
      tabindex="-1"
      data-common--options-dropdown-target="menu"
    >
      <div class="py-1" role="none">
        <% items.each_with_index do |item, index| %>
          <!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
          <%= capture do %>
            <%= item.call("block px-4 py-2 text-sm text-gray-700", index: index) %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
