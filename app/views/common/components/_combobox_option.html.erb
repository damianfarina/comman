<%# locals: (id:, value:)  %>

<li
  class="relative cursor-pointer select-none py-1.5 pl-3 pr-9 text-gray-900 hover:bg-lightGray-100 focus:outline-none focus:bg-lightBlue-300"
  role="option"
  tabindex="0"
  data-action="
    click->common--combobox-input#select
    keydown.down->common--combobox-input#focusNext:prevent
    keydown.up->common--combobox-input#focusPrevious:prevent
    keydown.enter->common--combobox-input#select:prevent
    keydown->common--combobox-input#searchMore
  "
  data-common--combobox-input-target="option"
  data-id="<%= id %>"
  data-value="<%= value %>"
>
  <%= yield %>
</li>
