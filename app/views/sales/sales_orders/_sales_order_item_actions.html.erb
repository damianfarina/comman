<%# locals: (sales_order:, sales_order_item:) %>

<div class="flex items-center gap-1">
  <%= turbo_frame_tag "sales_order_item_split_actions_#{sales_order_item.id}", class: "contents" do %>
    <% if sales_order_item.quantity > 0 %>
      <%= link_to(split_sales_sales_order_sales_order_item_path(sales_order, sales_order_item),
        class: "text-blue hover:text-blue-900 transition",
      ) do %>
        <%= heroicon("document-duplicate", variant: "outline", options: { class: "size-6", "aria-label": "plus" }) %>
        <span class="sr-only"><%= t(".split") %></span>
      <% end %>
    <% end %>
  <% end %>
</div>
