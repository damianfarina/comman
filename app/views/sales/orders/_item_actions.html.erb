<%# locals: (item:) %>

<div class="flex items-center gap-1">
  <%= turbo_frame_tag "item_split_actions_#{item.id}", class: "contents" do %>
    <% if item.can_split? %>
      <%= link_to(split_sales_order_item_path(item.order, item),
        class: "text-gray-300 hover:text-gray-700 transition",
        title: t(".split"),
      ) do %>
        <%= heroicon("document-duplicate", variant: "outline", options: { class: "size-6", "aria-label": "split" }) %>
        <span class="sr-only"><%= t(".split") %></span>
      <% end %>
    <% end %>

    <% if item.confirmed? %>
      <%= button_to(work_on_sales_order_item_path(item.order, item),
        class: "cursor-pointer text-yellow hover:text-yellow-900 transition",
        method: :post,
        form_class: "contents",
        title: t(".work_on"),
      ) do %>
        <%= heroicon("hand-raised", variant: "outline", options: { class: "size-6", "aria-label": "work on" }) %>
      <% end %>
    <% end %>

    <% if item.in_progress? %>
      <%= button_to(complete_sales_order_item_path(item.order, item),
        class: "cursor-pointer text-blue hover:text-blue-900 transition",
        method: :post,
        form_class: "contents",
        title: t(".complete"),
      ) do %>
        <%= heroicon("cube", variant: "outline", options: { class: "size-6", "aria-label": "complete" }) %>
      <% end %>
    <% end %>

    <% if item.ready? %>
      <%= button_to(deliver_sales_order_item_path(item.order, item),
        class: "cursor-pointer text-green hover:text-green-900 transition",
        method: :post,
        form_class: "contents",
        title: t(".deliver"),
      ) do %>
        <%= heroicon("truck", variant: "outline", options: { class: "size-6", "aria-label": "deliver" }) %>
      <% end %>
    <% end %>

    <% if item.can_undo_status? %>
      <%= button_to(undo_status_sales_order_item_path(item.order, item),
        class: "cursor-pointer text-gray-100 hover:text-gray transition",
        method: :post,
        form_class: "contents",
        title: t(".undo_status"),
        data: { turbo_confirm: t(".undo_status_confirmation") }
      ) do %>
        <%= heroicon("arrow-uturn-left", variant: "outline", options: { class: "size-6", "aria-label": "undo" }) %>
      <% end %>
    <% end %>

    <% items = [
        (->(classes, index:) do
          button_to(
            t(".cancel"),
            cancel_sales_order_item_path(item.order, item),
            method: :post,
            data: { turbo_confirm: t("messages.are_you_sure") },
            class: "#{classes} text-red-500",
          )
        end if item.can_cancel?)
      ] %>
    <%= render("common/components/options_dropdown", items: items) if items.any? %>
  <% end %>
</div>
