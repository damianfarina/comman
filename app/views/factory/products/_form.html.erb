<%= form_for([:factory, product], html: { class: "form" }) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('messages.form_errors', count: product.errors.count) %></h2>
      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form__field">
    <%= f.label :formula %>
    <%= f.collection_select(:formula_id, Formula.all, :id, :name, prompt: true) %>
  </div>

  <div class="form__field">
    <%= f.label :shape %>
    <%= f.text_field :shape %>
  </div>

  <div class="form__field">
    <%= f.label :size %>
    <%= f.text_field :size %>
  </div>

  <div class="form__field">
    <%= f.label :weight %>
    <%= f.text_field :weight %>
  </div>

  <div class="form__field">
    <%= f.label :pressure %>
    <%= f.text_field :pressure %>
  </div>

  <div class="form__field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="form__actions">
    <%= f.submit %>
  </div>
<% end %>
