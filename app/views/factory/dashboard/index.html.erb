<div id="container" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
<script type="text/javascript">
$(function () {
    var chart;
    $(document).ready(function() {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                type: 'spline'
            },
            title: {
                text: 'Niveles de producción'
            },
            subtitle: {
                text: 'Sumatoria de toda la materia prima utilizada por mes, comparado con años anteriores'
            },
            xAxis: {
                categories: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun',
                    'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic']
            },
            yAxis: {
                title: {
                    text: 'Consumo de materia prima'
                },
                min: 0
            },
            tooltip: {
                formatter: function() {
                        return '<b>'+ this.series.name +'</b><br/>'+
                        this.y +' Kg';
                }
            },

            series: [
                <% ProductionMonth.data_for_chart.each do |year| %>
                    {
                        name: '<%= year[:name] %>',
                        data: [
                            <% year[:data].each do |month| %>
                                <%= month[:production].round %>,
                            <% end %>
                        ],
                    },
                <% end %>
            ]
        });
    });
    
});
</script>