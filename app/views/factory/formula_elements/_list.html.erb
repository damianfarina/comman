<%= will_paginate formula_elements %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% formula_elements.each do |formula_element| %>
      <tr>
        <td><%= formula_element.id %></td>
        <td><%= formula_element.name %></td>
        <td><%= formula_element.current_stock %></td>
        <td><%= link_to 'Show', factory_formula_element_path(formula_element) %></td>
        <td><%= link_to 'Edit', edit_factory_formula_element_path(formula_element) %></td>
        <td><%= link_to 'Destroy', factory_formula_element_path(formula_element), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate formula_elements %>
