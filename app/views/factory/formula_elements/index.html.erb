<p id="notice"><%= notice %></p>

<h1><%= FormulaElement.model_name.human %></h1>

<%= link_to t('actions.new'), new_factory_formula_element_path %>

<%= form_for @search, url: factory_formula_elements_path, html: { method: :get } do |f| %>
  <%= f.text_field :id_eq, placeholder: 'ID' %>
  <%= f.text_field :name_cont, placeholder: 'Nombre' %>
  <%= f.submit 'Buscar' %>
<% end %>

<div id="formula-element-list">
  <%= render 'list', formula_elements: @formula_elements, search: @search %>
</div>
