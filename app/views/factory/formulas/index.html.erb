<%= render "common/headings/page",
  title: t("titles.formula.index"),
  actions: [
    { label: t("navigation.new"), path: new_factory_formula_path, method: :get },
  ],
  breadcrumbs: [
    { title: t("navigation.dashboard"), path: factory_dashboard_index_path },
    { title: t("titles.formula.index"), path: factory_formulas_path },
  ] %>

<div class="w-full">
  <div class="mt-8 flow-root">
    <div class="flex flex-1">
      <%= search_form_for(
        @q,
        url: factory_formulas_path,
        method: :get,
        data: {
          turbo_frame: "formulas_table",
          turbo_action: "advance",
        },
        class: "w-full max-w-lg lg:max-w-xs",
      ) do |f| %>
        <label for="search" class="sr-only"><%= t("placeholders.search_by_name_abrasive_grain_hardness_porosity_alloy") %></label>
        <div class="relative text-gray-300 focus-within:text-gray">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="size-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
              <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 1 0 0 11 5.5 5.5 0 0 0 0-11ZM2 9a7 7 0 1 1 12.452 4.391l3.328 3.329a.75.75 0 1 1-1.06 1.06l-3.329-3.328A7 7 0 0 1 2 9Z" clip-rule="evenodd" />
            </svg>
          </div>
          <%= f.search_field(
          :name_or_abrasive_or_grain_or_hardness_or_porosity_or_alloy_cont,
          autofocus: true,
          autocomplete: "off",
          class: "block w-full rounded-md border-0 ring-0 ring-offset-1 ring-offset-gray bg-white py-1.5 pl-10 pr-3 text-gray-900 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue sm:text-sm/6",
          placeholder: t("placeholders.search_by_name_abrasive_grain_hardness_porosity_alloy"),
        ) %>
        </div>
      <% end %>
    </div>

    <%= turbo_frame_tag "formulas_table" do %>
      <div class="inline-block min-w-full py-2 align-middle">
        <table id="formulas" class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 text-center text-sm font-semibold text-gray-900"><%= sort_link(@q, :id, Formula.human_attribute_name(:id), class: "flex", data: { turbo_action: "advance"}) %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 sm:pl-0"><%= sort_link(@q, :name, Formula.human_attribute_name(:name), class: "flex", data: { turbo_action: "advance"}) %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= sort_link(@q, :abrasive, Formula.human_attribute_name(:abrasive), class: "flex", data: { turbo_action: "advance"}) %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= sort_link(@q, :grain, Formula.human_attribute_name(:grain), class: "flex", data: { turbo_action: "advance"}) %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= sort_link(@q, :hardness, Formula.human_attribute_name(:hardness), class: "flex", data: { turbo_action: "advance"}) %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= sort_link(@q, :porosity, Formula.human_attribute_name(:porosity), class: "flex", data: { turbo_action: "advance"}) %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= sort_link(@q, :alloy, Formula.human_attribute_name(:alloy), class: "flex", data: { turbo_action: "advance"}) %></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @formulas.each do |formula| %>
              <tr id="<%= dom_id formula %>">
                <td class="whitespace-nowrap px-3 py-4 text-center text-sm text-gray-500">
                  <%= link_to formula.id, factory_formula_path(formula), data: { turbo_frame: "_top" } %>
                </td>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
                  <%= link_to factory_formula_path(formula), data: { turbo_frame: "_top" } do %>
                    <span class="sr-only">Ver formula </span><%= formula.name %>
                  <% end %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= formula.abrasive %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= formula.grain %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= formula.hardness %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= formula.porosity %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= formula.alloy %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= paginate @formulas, total_count: @formulas.total_count %>
    <% end %>
  </div>
</div>
