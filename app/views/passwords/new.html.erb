<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">¿Olvidates la contraseña?</h1>

  <%= form_with url: passwords_path, class: "contents" do |form| %>
    <div class="my-5">
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Ingresa tu correo electrónico", value: params[:email_address], class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit "Enviar instrucciones", class: "rounded-lg px-3.5 py-2.5 bg-blue-700 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>
