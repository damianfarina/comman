<% content_for :secondary_navigation do %>
  <li><%= link_to t(:index, :scope => [:menu]), business_clients_path %></li>
  <li><%= link_to t(:new, :scope => [:menu]), new_business_client_path %></li>
  <li class="active"><a href="#"><%= t(:index, :scope => [:menu, :client_type]) %></a></li>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= ClientType.human_attribute_name(:name) %></th>
      <th><%= ClientType.human_attribute_name(:description) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @client_types.each do |client_type| %>
      <tr>
        <td><%= client_type.name %></td>
        <td><%= client_type.description %></td>
        <td><%= link_to 'Edit', edit_business_client_type_path(client_type) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
