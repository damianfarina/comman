<div>
  <%= turbo_frame_tag discount do %>
    <div class="h-18 flex items-center" id="<%= dom_id discount %>">
      <dt class="font-medium text-gray-900 w-64 flex-none pr-6">
        <% if discount.cash? %>
          <%= t("activerecord.attributes.discount.cash") %>
        <% else %>
          <%= t("activerecord.attributes.client.client_type_values.#{discount.client_type}") %>
        <% end %>
      </dt>
      <dd class="flex justify-between gap-x-6 flex-auto">
        <div class="text-gray-900"><%= discount.percentage %>%</div>
        <%= link_to edit_office_discount_path(discount), class: 'font-semibold text-blue-700 hover:text-blue-300' do %>
          <%= heroicon("pencil", options: { class: "size-4" }) %>
        <% end %>
      </dd>
    </div>
  <% end %>
</div>
