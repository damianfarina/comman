<div class="container mx-auto sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <%= image_tag("logo.png", class: "mx-auto h-20 w-auto", alt: "Comman") %>
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Ingresa a tu cuenta</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= form_with url: session_url, class: "contents" do |form| %>
        <div class="space-y-6">
          <div>
            <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Correo electrónico</label>
            <div class="mt-2">
              <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: "Ingresá tu correo electrónico", value: params[:email_address], class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div>
            <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Contraseña</label>
            <div class="mt-2">
              <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Ingresá tu contraseña", maxlength: 72, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-blue-700 focus:ring-blue-700">
              <label for="remember-me" class="ml-3 block text-sm leading-6 text-gray-900">Mantener sesión</label>
            </div>

            <div class="text-sm leading-6">
              <%= link_to "¿Olvidaste la contraseña?", new_password_path, class: "font-semibold text-blue-700 hover:text-blue-500" %>
            </div>
          </div>

          <div>
            <%= form.submit "Ingresar", class: "flex w-full justify-center rounded-md bg-blue-700 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-700" %>
          </div>
        </div>
      <% end %>

    <!--
    <p class="mt-10 text-center text-sm text-gray-500">
      Not a member?
      <a href="#" class="font-semibold leading-6 text-blue-700 hover:text-blue-500">Start a 14 day free trial</a>
    </p>
    -->
  </div>
</div>
